        flex-direction: column;
        margin: 95px;
        justify-content: center;
    }

    .image-side {
        width: 500px;
        margin: 40px;
    }

    .file-input-container {
        width: 500px;
        height: 500px;
        position: relative;
        overflow: hidden;
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .file-input-container input {
            width: 100%;
            height: 100%;
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }

    .file-input-label {
        font-size: 16px;
        color: #333;
        z-index: 2;
        position: absolute;
    }

    h3 {
        margin-left: 166px;
