@model Advertisement

@{
    Layout = "~/Views/Shared/Layout3.cshtml";

}


<section>
    <h3>Advertisement Detail</h3>
    <div class="container">
        <div class="image-side">
            <div class="file-input-container">
                <img id="selected-image" src="data:image/png;base64,@Model.Image" alt="Selected Image">
            </div>
        </div>
        <div class="attribute-side">
            <label id="title-text" class="attribute-text" for="title">@Model.Title</label>
            <label class="attribute-text" for="description">@Model.Description</label>
            <label class="attribute-text" for="tags">@Model.Tag</label>
            <label class="attribute-text" for="price">$@Model.Price</label>
            @*<button id="product-button-@Model.Id" class="add-to-cart" onclick="handleButtonClick(@Model.Id, @Model.SellerUserID)" type="submit">Update Product</button>*@
        </div>
    </div>
</section>

