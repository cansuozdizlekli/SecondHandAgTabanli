        display: flex;
    }

    #selected-image {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        object-fit: cover;
    }

    .navbar-nav {
        justify-content: end;
        align-items: center;
    }

    #search-item {
        border-radius: 30px;
        border-width: thin;
        height: 32px;
        font-size: smaller;
        width: 200px;
    }

    #logoutButton {
        border: none;
        border-radius: 10px;
        margin-left: 40px;
        background-color: #8968CD;
        color: white;
    }

    #title-text {
        font-size: 26px;
        color: #8968CD;
    }
</style>

